# Development Dockerfile for Analytics Service
# Optimized for fast builds and development workflow

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (minimal set for development)
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements first for better Docker layer caching
COPY services/analytics/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy shared dependencies and install them
COPY services/shared/ ./shared/
RUN pip install -e ./shared/

# Copy service code
COPY services/analytics/ .

# Set Python path for development
ENV PYTHONPATH=/app/shared:/app
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=development

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Development command with auto-reload
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
