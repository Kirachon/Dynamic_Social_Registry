# Frontend (Next.js) environment configuration
# Copy to .env.local and adjust values as needed

# Kong proxy base URL (edge)
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Optional direct service bases (for local dev only)
NEXT_PUBLIC_REGISTRY_API=http://localhost:8002
NEXT_PUBLIC_ELIGIBILITY_API=http://localhost:8003
NEXT_PUBLIC_PAYMENT_API=http://localhost:8004
NEXT_PUBLIC_ANALYTICS_API=http://localhost:8005

# Auth (NextAuth + Keycloak)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-secret
KEYCLOAK_ISSUER=http://localhost:8080/realms/dsrs
KEYCLOAK_CLIENT_ID=dsrs-web
KEYCLOAK_CLIENT_SECRET=replace-with-client-secret

# Development mode flags
NEXT_PUBLIC_DEV_MODE=1
# Optional: provide a dev JWT to hit Kong-protected endpoints in local env
DEV_JWT=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9.dev-placeholder.signature

